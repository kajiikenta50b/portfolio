<div class="container pt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <div class="text-center mb-4">
        <% icon_file = "default_#{current_user.faction}.jpg" %>
        <%= image_tag icon_file, class: 'img-fluid', size: '100x100' %>
      </div>
      <h1 class="float-left mb-5"><%= t('.title') %></h1>
      <%= link_to t('defaults.edit'), edit_profile_path, class: 'btn btn-primary float-right' %>
      <br>
      <br>
      <table class="table">
        <tr>
          <th scope="row"><%= User.human_attribute_name(:username) %></th>
          <td><%= current_user.username %></td>
        </tr>
        <tr>
          <th scope="row"><%= User.human_attribute_name(:email) %></th>
          <td><%= current_user.email %></td>
        </tr>
        <tr>
          <th scope="row"><%= User.human_attribute_name(:introduction) %></th>
          <td><%= current_user.introduction %></td>
        </tr>
        <tr>
          <th scope="row"><%= User.human_attribute_name(:avatar) %></th>
          <td><%= image_tag current_user.avatar_url, class: 'rounded-circle', size: '50x50' %></td>
        </tr>
      </table>
    </div>
  </div>
</div>