<!-- app/views/shared/_search_form.html.erb -->
<%= search_form_for q, url: url, method: :get, class: "d-flex", data: { controller: "search" } do |f| %>
  <%= f.search_field :title_cont, class: "form-control me-2", placeholder: "タイトル検索はこちら", data: { action: "input->search#search", search_target: "title" } %>
  <%= f.search_field :body_cont, class: "form-control me-2", placeholder: "文章検索はこちら", data: { action: "input->search#search", search_target: "body" } %>
  <%= f.submit "検索", class: "btn btn-primary" %>
<% end %>
