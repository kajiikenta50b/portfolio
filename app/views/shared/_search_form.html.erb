<!-- app/views/shared/_search_form.html.erb -->
<%= search_form_for q, url: url, method: :get, class: "d-flex" do |f| %>
  <%= f.search_field :title_cont, class: "form-control me-2", placeholder: "タイトル検索はこちら" %>
  <%= f.search_field :body_cont, class: "form-control me-2", placeholder: "文章検索はこちら" %>
  <%= f.submit "検索", class: "btn btn-primary" %>
<% end %>
